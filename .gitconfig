[includeIf "gitdir:~/projects/"]
	path = ~/.gitconfig.local

[includeIf "gitdir:~/mac-dotfiles/"]
	path = ~/.gitconfig.local.private

[init]
	defaultBranch = main

[color "status"]
	added = red
	changed = green
	untracked = blue

[color "diff"]
	meta = cyan
	frag = magenta
	old = blue
	new = red

[color "branch"]
	current = cyan reverse
	local = cyan
	remote = green

[credential]
	helper = osxkeychain
[http]
	postBuffer = 524288000
